<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>66.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <name>Check_Charge_Based_on_Master</name>
        <label>Check Charge Based on Master</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Lumpsum</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Charge_Based_On_Master__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Lumpsum</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Charge_Based_On_Master__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Project_Unit__r.S_Charge_Percentage__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Amount__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Amount</targetReference>
            </connector>
            <label>Is Lumpsum</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>lumpsumAmount</name>
        <dataType>Number</dataType>
        <expression>IF(
        ISBLANK({!$Record.Project_Unit__r.S_Charge_Percentage__c}),
    0,

    IF(
        ISPICKVAL({!$Record.Charge_on_Area_Type__c}, &apos;Carpet Area&apos;),
        IF(
            ISBLANK({!$Record.Project_Unit__r.Carpet_Area__c}),
            0,
            {!$Record.Rate__c} *
            {!$Record.Project_Unit__r.Carpet_Area__c} *
            (
               SDPercentage /
                (100 - SDPercentage)
            )
        ),
        IF(
            ISBLANK({!$Record.Project_Unit__r.Actual_Area_value__c}),
            0,
            {!$Record.Rate__c} *
            {!$Record.Project_Unit__r.Actual_Area_value__c} *
            (
               SDPercentage/
                (100 -SDPercentage)
            )
        )
    )
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>SDPercentage</name>
        <dataType>Number</dataType>
        <expression>{!$Record.Project_Unit__r.S_Charge_Percentage__c}/100</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Rate List After Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Rate List After Flow</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Amount</name>
        <label>Update Amount</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Amount__c</field>
            <value>
                <elementReference>lumpsumAmount</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Check_Charge_Based_on_Master</targetReference>
        </connector>
        <object>Rate_List__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Obsolete</status>
</Flow>
