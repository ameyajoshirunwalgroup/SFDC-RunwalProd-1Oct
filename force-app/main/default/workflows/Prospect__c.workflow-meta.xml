<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Send_Email_to_SM_when_prospect_assigned</fullName>
        <description>Send Email to SM when prospect assigned</description>
        <protected>false</protected>
        <recipients>
            <field>Sales_Manager_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Send_Email_Sales_Manager_when_prospect_Assigned</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Prospect_Name</fullName>
        <field>Name</field>
        <formula>Lead__r.FirstName + &apos; &apos; + Lead__r.LastName + &apos;-&apos; + Project__r.Name</formula>
        <name>Update Prospect Name</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Send escalation mail for SM Call on Prospect</fullName>
        <active>true</active>
        <formula>OR(AND(ISBLANK(Sales_Call_Attempt_Date__c ),((NOW() - Last_Call_Attempt_Date__c)*24*60 &gt; 120)),AND(NOT(ISBLANK(Sales_Call_Attempt_Date__c )),((Last_Call_Attempt_Date__c -  Sales_Call_Attempt_Date__c)*24*60 &gt; 120)))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <offsetFromField>Prospect__c.Last_Call_Attempt_Date__c</offsetFromField>
            <timeLength>2</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Send escalation mail for SM Call on Prospect if sales call is not empty</fullName>
        <active>false</active>
        <formula>NOT(ISBLANK(Sales_Call_Attempt_Date__c ))  &amp;&amp;  ((Last_Call_Attempt_Date__c - Sales_Call_Attempt_Date__c )*24*60 &gt; 1)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <offsetFromField>Prospect__c.Last_Call_Attempt_Date__c</offsetFromField>
            <timeLength>2</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
