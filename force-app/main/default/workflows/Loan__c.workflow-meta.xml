    <rules>
        <fullName>Home Loan RM Escalations</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Loan__c.HL_RM_Name__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Loan__c.HL_TL_Name__c</field>
