<aura:component controller="RescheduleCancelMsTeamsMeeting" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global" >
<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
<aura:attribute name="recordId" type="String" />
<aura:attribute name="sobjecttype" type="String" default="{!v.sObjectName}"/>
<aura:attribute name="msTeamObj" type="object" />
<aura:attribute name="disableButton" type="boolean" default="true"/>
<aura:attribute name="todayDate" type="DateTime"/>
<aura:attribute name="showSpinner" type="boolean" default="false"/>

 <!--Custom Styles for Modal Header and Footer--> 
 <aura:html tag="style">
    .cuf-content {
    padding: 0 0rem !important;
    }
    .slds-p-around--medium {
    padding: 0rem !important;
    }       
    .slds-modal__content{
    overflow-y:hidden !important;
    height:unset !important;
    max-height:unset !important;
    }
</aura:html>
 
<aura:if isTrue="{!v.showSpinner}">
        <div class="slds-spinner_container">
            <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
        
    <aura:set attribute="else">
    <!--Modal Header-->  
     <div class="modal-header slds-modal__header slds-size_1-of-1">
        <h4 class="title slds-text-heading--medium">ReSchedule Meeting</h4>
    </div>
<!--End Modal Header-->  

<!--Modal Body--> 
    <div class="slds-modal__content slds-p-around--x-small slds-align_absolute-center slds-size_1-of-1 slds-is-relative">
        <form class="slds-form--stacked">
            <lightning:input name="input1" disabled="true" value="{!v.msTeamObj.RW_Title__c}" label="Meeting Subject" placeholder="Subject..."  aura:id="Subject"/>
            <lightning:input type="datetime" value="{!v.msTeamObj.RW_Start_Time__c}"  min="{!v.todayDate}" label="Start Time" name="datetime" required="true" aura:id="StartTime" onchange="{!c.onChangeFields}"/>
            <lightning:input type="datetime" value="{!v.msTeamObj.RW_End_Time__c}"  min="{!v.todayDate}" label="End Time" name="datetime" required="true" aura:id="EndTime" onchange="{!c.onChangeFields}"/>
            <lightning:textarea name="input2"  value="{!v.msTeamObj.RW_Meeting_Content__c}" label="Meeting Body" required="true" placeholder="Meeting content..." aura:id="Content" onchange="{!c.onChangeFields}"/>
            
        </form> 
    </div>
  
<!--End of Modal Body--> 
 
<!--Modal Footer-->
    <div class="modal-footer slds-modal__footer slds-size_1-of-1">
       <lightning:button variant="Brand" class="slds-button" label="ReSchedule Meeting" onclick="{!c.handleSubmit}" disabled="{!v.disableButton}"/>
      <lightning:button variant="Neutral" class="slds-button" label="Cancel" onclick="{!c.handleClose}"/>
    </div>
<!--End of Modal Footer-->
  </aura:set>
 </aura:if>
</aura:component>