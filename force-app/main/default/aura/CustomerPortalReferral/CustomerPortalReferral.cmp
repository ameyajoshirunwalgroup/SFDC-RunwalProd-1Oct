<aura:component controller="CustomerPortalEnquiryController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="referralObject" type="RW_Referral__c" default="{ 'sobjectType': 'RW_Referral__c',
                        'RW_First_Name__c': '',
                        'RW_Last_Name__c': '',
                        'RW_Email_Address__c': '',
                        'RW_Contact_Phone__c': '',
                        'RW_Project__c':''
                         }"/>
    <aura:attribute name="projectNames" type="List"/>
    <aura:attribute name="openModal" type="Boolean"/>
    <aura:attribute name="accrecord" type="List"/>
    <aura:handler name="init" value="this" action="{!c.doInit}"/>
    <aura:attribute name="ReferralWrapList" type="Map" default="{}"/>
    <lightning:card>
        <div class="slds-p-around_medium">
        <div class="slds-grid slds-gutters slds-wrap" >
            <!--div class="slds-col slds-size_3-of-12"-->
                <!--<div class="slds-p-around_medium">-->
                   
                    <!--aura:iteration items="{!v.ReferralWrapList}" var="ref"-->
            <div class="slds-col slds-size_1-of-1 slds-medium-size_2-of-12">
            </div>
                        <div class="slds-col slds-size_1-of-1 slds-medium-size_4-of-12">
                    <lightning:input value="{!v.ReferralWrapList.firstName}" label = "First Name" readonly = "true"/>
                        </div>
            <div class="slds-col slds-size_1-of-1 slds-medium-size_2-of-12">
            </div>
                        <div class="slds-col slds-size_1-of-1 slds-medium-size_4-of-12">
                                <lightning:input value="{!v.ReferralWrapList.lastName}" label = "Last Name" readonly = "true"/>
                        </div>
            <div class="slds-col slds-size_1-of-1 slds-medium-size_2-of-12">
            </div>
                        <div class="slds-col slds-size_1-of-1 slds-medium-size_4-of-12">
                                <lightning:input value="{!v.ReferralWrapList.emailId}" label = "Email" readonly = "true"/>
                        </div>
            <div class="slds-col slds-size_1-of-1 slds-medium-size_2-of-12">
            </div>
                        <div class="slds-col slds-size_1-of-1 slds-medium-size_4-of-12">
                                <lightning:input value="{!v.ReferralWrapList.phone}" label = "Phone" readonly = "true"/>
                        </div>
            <div class="slds-col slds-size_1-of-1 slds-medium-size_2-of-12">
            </div>
                              <div class="slds-col slds-size_1-of-1 slds-medium-size_4-of-12">
                  <lightning:select  value="{!v.referralObject.RW_Project__c}" name="Project" label="Project" required="true">
                           				<option value="">--None--</option>
                      					<aura:iteration items="{!v.ReferralWrapList.projectNames}" var="provar" indexVar="index">
                                            
                                                    <option value="{!provar.projName}"> {!provar.projName}</option>            
                     				   </aura:iteration>
                                    </lightning:select>   
                 <!--</div>-->
                <!--/aura:iteration-->
                </div>
            <div class="slds-col slds-size_1-of-1 slds-medium-size_2-of-12">

                        </div>
            	<div class="slds-col slds-size_1-of-1 slds-medium-size_4-of-12">

                        </div>
                 <div class="slds-align_absolute-center" >
            		<lightning:button class="slds-m-top_x-large" variant="brand"  name="Submit" label="Submit" onclick="{! c.submitReferral }"/>
                 </div>
            <!--/div-->
        </div>
        </div>
    </lightning:card>
</aura:component>