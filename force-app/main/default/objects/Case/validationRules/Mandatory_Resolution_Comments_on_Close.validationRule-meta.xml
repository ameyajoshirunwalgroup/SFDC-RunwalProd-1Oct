<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandatory_Resolution_Comments_on_Close</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;Case Closed&quot;),
    NOT(ISBLANK(Functional_User__c)),
    ISBLANK(RW_Resolution_comments__c)
)</errorConditionFormula>
    <errorMessage>Resolution Comments are required to close this case when a Functional User is assigned.</errorMessage>
</ValidationRule>
