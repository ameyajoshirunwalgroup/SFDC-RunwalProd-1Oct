<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Status_Reopened</fullName>
    <active>false</active>
    <errorConditionFormula>AND(!ISPICKVAL(PRIORVALUE(Status) ,&apos;Case Closed&apos;),  ISPICKVAL( Status , &apos;Reopened&apos;)  )</errorConditionFormula>
    <errorMessage>Case Status cannot be reopened until case in not closed.</errorMessage>
</ValidationRule>
