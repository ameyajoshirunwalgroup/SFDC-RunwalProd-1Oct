<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Conversion_Ratio__c</fullName>
    <externalId>false</externalId>
    <formula>IF( 
AND(NumberOfOpportunities &lt;&gt; 0, NOT(ISNULL(NumberOfOpportunities))),
(NumberOfWonOpportunities /  NumberOfOpportunities )*100, 0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Opportunity Conversion Rate (%)</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
