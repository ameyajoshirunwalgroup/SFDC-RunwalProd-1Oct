<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Pl_update_Next_Action_Date</fullName>
    <active>true</active>
    <errorConditionFormula>and(
ISPICKVAL(Call_Status__c, &apos;Follow Up&apos;),
ISNULL(Next_Action_Date__c),
 $Profile.Name != &quot;Receptionist&quot;
)</errorConditionFormula>
    <errorDisplayField>Next_Action_Date__c</errorDisplayField>
    <errorMessage>Next action Date is mandatory for Follow up tasks</errorMessage>
</ValidationRule>
