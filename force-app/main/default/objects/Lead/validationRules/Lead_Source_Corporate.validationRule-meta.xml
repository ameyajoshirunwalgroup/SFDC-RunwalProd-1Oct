<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_Source_Corporate</fullName>
    <active>false</active>
    <description>If Lead Source is Corporate then Corporate Lookup becomes mandatory</description>
    <errorConditionFormula>IF(ISPICKVAL( LeadSource , &apos;Corporate&apos;),
       ISBLANK(Corporate__c),false
)</errorConditionFormula>
    <errorDisplayField>Corporate__c</errorDisplayField>
    <errorMessage>Please Enter a Value</errorMessage>
</ValidationRule>
