<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Customer_References_for_Loyalty</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISPICKVAL( LeadSource , &apos;Loyalty&apos;), ISBLANK( Customer_Reference__c )  )</errorConditionFormula>
    <errorDisplayField>Customer_Reference__c</errorDisplayField>
    <errorMessage>Customer Reference is mandatory if lead source is &quot;Loyalty&quot;</errorMessage>
</ValidationRule>
