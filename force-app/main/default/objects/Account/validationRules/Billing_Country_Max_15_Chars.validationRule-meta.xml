<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Billing_Country_Max_15_Chars</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISNEW(),LEN(BillingCountry) &gt; 15)</errorConditionFormula>
    <errorDisplayField>BillingCountry</errorDisplayField>
    <errorMessage>Billing Country cannot be more than 15 characters.</errorMessage>
</ValidationRule>
