public class NumberToWord {
    // Class variable to store the numeric amount
    public Decimal amount {get; set;}
    // Variable to store the converted amount in words
    public String amountInWords {get; private set;}
    // Arrays for number to words conversion
    private static final String[] units = new String[]{
        'Zero', 'One', 'Two', 'Three', 'Four', 'Five', 'Six', 'Seven', 'Eight', 'Nine', 
        'Ten', 'Eleven', 'Twelve', 'Thirteen', 'Fourteen', 'Fifteen', 'Sixteen', 
        'Seventeen', 'Eighteen', 'Nineteen'
    };
    private static final String[] tens = new String[]{
        '', '', 'Twenty', 'Thirty', 'Forty', 'Fifty', 'Sixty', 'Seventy', 'Eighty', 'Ninety'
    };
    // Method to convert the amount to words
    public void convertToWords() {
        if (amount != null) {
            amountInWords = convertDecimal(amount);
        } else {
            amountInWords = 'Zero';
        }
    }
    // Private helper method for conversion
    private String convert(Integer num) {
        if (num < 20) {
            return units[num];
        }
        if (num < 100) {
            Integer remainder = Math.mod(num, 10);
            return tens[num / 10] + (remainder != 0 ? ' ' + units[remainder] : '');
        }
        if (num < 1000) {
            Integer remainder = Math.mod(num, 100);
            return units[num / 100] + ' Hundred' + (remainder != 0 ? ' and ' + convert(remainder) : '');
        }
        if (num < 100000) {
            Integer remainder = Math.mod(num, 1000);
            return convert(num / 1000) + ' Thousand' + (remainder != 0 ? ' ' + convert(remainder) : '');
        }
        if (num < 10000000) {
            Integer remainder = Math.mod(num, 100000);
            return convert(num / 100000) + ' Lakh' + (remainder != 0 ? ' ' + convert(remainder) : '');
        }
        Integer remainder = Math.mod(num, 10000000);
        return convert(num / 10000000) + ' Crore' + (remainder != 0 ? ' ' + convert(remainder) : '');
    }
    // Method to handle decimal amounts (dollars and cents)
    private String convertDecimal(Decimal num) {
        Integer dollars = num.intValue();
        Integer cents = Math.round((num - dollars) * 100);
        String result = convert(dollars) + ' Rupees';
        if (cents > 0) {
            result += ' and ' + convert(cents) + ' Paisa ' + 'Only' ;
        } else {
            result += ' Only';
        }
        return result;
    }
    
