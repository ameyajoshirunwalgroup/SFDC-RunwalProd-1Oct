                    <apex:outputpanel rendered="{!showSuccessMsg == false}">
                    	<div class="row" id="secondDiv">
                        <apex:actionstatus id="status">
                            <apex:facet name="start">
                                <div class="spinnerBg" />
                                <div class="Assigned" />
                            </apex:facet>
                        </apex:actionstatus>
                        
                        <div class="col-sm-12 col-md-10 col-lg-25">
                            <div class="">
