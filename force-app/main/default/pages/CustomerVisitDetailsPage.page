                                </center>
                                <br/>
                                <apex:pageMessages ></apex:pageMessages><br/>
                                
                                <table  width="100%;" style="border-collapse: collapse;" cellpadding="2px">
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Name: </td>
                                        <td><apex:input value="{!name}" /></td>
                                    </tr>
                                    <tr>
                                    	<td colspan="2" style="font-size:20px;">Unit Details:</td>
                                    </tr>
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Project: </td>
                                        <td>
                                            <apex:selectList value="{!project}" size="1">
                                                <apex:selectOptions value="{!projList}" />
                                            </apex:selectList>
                                        </td>
                                        
                                    </tr>
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Tower: </td>
                                        <td><apex:input value="{!tower}" /></td>
                                    </tr>
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Unit: </td>
                                        <td><apex:input value="{!unit}" /></td>
                                    </tr>
                                    <tr>
                                    	<td colspan="2" style="font-size:20px;">Contact Details:</td>
                                    </tr>
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Mobile: </td>
                                        <td><apex:input value="{!mobile}" /></td>
                                    </tr>
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Email: </td>
                                        <td><apex:input value="{!email}" /></td>
                                    </tr>
                                    <tr style="width:100%;">
                                        <td style="font-size:20px;">Interested In: </td>
                                    	<td >
                                            <apex:selectList style="width:" value="{!interestedIn}"  size="1">
                                                <apex:selectOptions value="{!interestedList}" />
                                            </apex:selectList>
                                        </td>
                                    </tr>
                                </table>
                                
