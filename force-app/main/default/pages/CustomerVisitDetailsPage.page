                                    <div style="width:100%;">
                                        <label style="width:15%;padding-right:10px;">Mobile:  </label>
                                        <apex:input style="width:85%;" value="{!mobile}" />
                                    </div>
                                    <div style="width:100%;">
                                        <label style="width:15%;padding-right:10px;">Email:  </label>
                                        <apex:input style="width:85%;" value="{!email}" />
                                    </div>
                                </div>
                                <div style="width:100%;">
                                    <label style="width:15%;padding-top:10px;padding-bottom:10px;padding-right:1px;">Interested In:  </label>
                                    <apex:selectList style="width:85%;" value="{!interestedIn}" multiselect="false" id="intr" size="1">
