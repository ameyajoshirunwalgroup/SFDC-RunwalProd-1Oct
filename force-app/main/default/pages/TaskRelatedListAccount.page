      function updateVisitButton(result,event){
        if(event.status) {
            if(result){
                console.log('result:' + result);
                sessionStorage.getItem('tab-index');
                var btn = 'btn-' + sessionStorage.getItem('tab-index');
                var btnDiv = j$("[id^='" + btn + "']");
