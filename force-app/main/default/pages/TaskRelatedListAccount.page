      function createTask(task) {
            var userInfo = sforce.connection.getUserInfo();
            var userName = userInfo.userName;
            if(task=='Presales Call') {
                var Subject = "Called  {!Account.Name}";
                var origin = 'New Presales Call'
            } else if(task =='Site Visit') {
                var Subject = "Visit Done for {!Account.Name}";
                var origin = 'New Site Visit'
            } else if(task == 'Sales Call') {
                var Subject = "Called {!Account.Name}";
                var origin = 'New Sales Call'
            }else if(task == 'CRM Call') {
                var Subject = "Called {!Account.Name}";
                var origin = 'New CRM Call'
            }
            else if(task == 'HWC') {
                var Subject = "Called {!Account.Name}";
                var origin = 'New HWC'
            } else {
                var Subject = task;
                var origin = 'Page';
            }
            if(task ==  'Site Visit')
            {
                window.open("/apex/VisitFormEditPage?subject=" + Subject + "&status=Completed&tasktype=" + task + "&origin=" + origin +"&who_id={!Account.RW_Full_Contact_Id__c}&what_id={!Account.id}&retURL=/{!Account.Id}&saveURL=/{!Account.Id}&cancelURL=/{!Account.Id}", "_parent");
            }
            else if(task ==  'HWC')
            {
                window.open("/apex/VDNBCallEditPage?subject=" + Subject + "&status=Completed&tasktype=" + task + "&origin=" + origin +"&who_id={!Account.RW_Full_Contact_Id__c}&what_id={!Account.id}&retURL=/{!Account.Id}&saveURL=/{!Account.Id}&cancelURL=/{!Account.Id}", "_parent");
            }else if(task ==  'Home Loan'){
            
                window.open("/apex/HomeLoanEditPage?subject=" + Subject + "&status=Scheduled&tasktype=" + task + "&origin=" + origin +"&who_id={!Account.RW_Full_Contact_Id__c}&what_id={!Account.id}&retURL=/{!Account.Id}&saveURL=/{!Account.Id}&cancelURL=/{!Account.Id}", "_parent");
            }else if(task ==  'Registration'){
                window.open("/apex/RegistrationTaskEdit?subject=" + Subject + "&status=Scheduled&tasktype=" + task + "&origin=" + origin +"&who_id={!Account.RW_Full_Contact_Id__c}&what_id={!Account.id}&retURL=/{!Account.Id}&saveURL=/{!Account.Id}&cancelURL=/{!Account.Id}", "_parent");
            }
            else{ 
            //Anuja changed url page from CallAttemptViewPage to CallAttemptViewPage2
                window.open("/apex/CallAttemptEditPage2?subject=" + Subject + "&status=Completed&tasktype=" + task + "&origin=" + origin +"&who_id={!Account.RW_Full_Contact_Id__c}&what_id={!Account.id}&retURL=/{!Account.Id}&saveURL=/{!Account.Id}&cancelURL=/{!Account.Id}", "_parent");
            }
        }
