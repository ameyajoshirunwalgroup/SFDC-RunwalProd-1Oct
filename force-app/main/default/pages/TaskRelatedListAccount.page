      function viewTask(taskId, tasktype) {
        if(tasktype.indexOf('Site Visit') != -1) {
           window.open("/apex/VisitFormViewPage?id="+taskId+ "&cancelURL={!Account.Id}&retURL={!Account.Id}&origin=ViewTask", "_parent")
           
        } else if (tasktype.indexOf('HWC') != -1){  //vdnb call to hwc
            window.open("/apex/VDNBCallViewPage?id="+taskId+ "&cancelURL={!Account.Id}&retURL={!Account.Id}&origin=ViewTask", "_parent")
        }
         else if (tasktype.indexOf('Enquiry Received') != -1){
            window.open("/apex/EnquiryFormViewPage?id="+taskId+ "&cancelURL={!Account.Id}&retURL={!Account.Id}&origin=ViewTask", "_parent")
        }
           else if (tasktype.indexOf('Home Loan') != -1){
            window.open("/apex/HomeLoanEditPage?id="+taskId+ "&tasktype="+tasktype+ " &cancelURL={!Account.Id}&retURL={!Account.Id}&origin=ViewTask", "_parent")
        }else if (tasktype.indexOf('Registration') != -1){
            window.open("/apex/RegistrationTaskEdit?id="+taskId+ "&cancelURL={!Account.Id}&retURL={!Account.Id}&origin=ViewTask", "_parent")
        } 
       else {
             window.open("/apex/CallAttemptViewPage2?id="+taskId+ "&cancelURL={!Account.Id}&retURL={!Account.Id}&origin=ViewTask", "_parent")
