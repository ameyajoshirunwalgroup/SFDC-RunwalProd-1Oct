               <td>
                   <apex:outputText value="{0, number, ###,##0}">
                    <apex:param value="{!info.Total_Forfeiture_Amount__c}"/>
                    </apex:outputText> 
                  
               </td>
               <td>
                   
               </td>
            </tr>
            
