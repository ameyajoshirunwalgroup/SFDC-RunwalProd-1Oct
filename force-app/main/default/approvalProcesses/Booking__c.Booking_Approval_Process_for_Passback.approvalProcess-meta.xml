<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Sales_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Quotation__c</field>
        <field>Token_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CRM_Head__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CRM head approval</label>
        <name>CRM_head_approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Sales_Head__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Sales Head Approval</label>
        <name>Sales_Head_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>RW_Booking/Booking_Approver_for_Passback_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>IF( ISPICKVAL( Source_of_Booking__c , &apos;Channel Partner&apos;) , AND( AND(NOT(ISPICKVAL( Booking_Confirmation_Approval_Status__c , &apos;Approved&apos;)), NOT(ISPICKVAL( Booking_Confirmation_Approval_Status__c , &apos;Sent for Approval&apos;))),AND(Not(ISNULL( Brokerage__c )), RW_Applicant_KYC_Verified__c )) , AND( AND(NOT(ISPICKVAL( Booking_Confirmation_Approval_Status__c , &apos;Approved&apos;)), NOT(ISPICKVAL( Booking_Confirmation_Approval_Status__c , &apos;Sent for Approval&apos;))) ,RW_Applicant_KYC_Verified__c) )</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Booking_Confirmation_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Booking_Confirmed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Booking_confirmed_date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Booking_Confirmation_Rejection_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sent_for_Revision</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Booking_Confirmation_Approve_Sen_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sent_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Booking Approval Process for Passback</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Booking_Confirmation_Rejection_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
